}

function theme_luopin_picture_main($node)
{
	$output = '<h4 class="luopin-h4">';
	$output .= t('Picture Files List');
	$output .= '</h4>';
	$sql = 'SELECT name, location, description, time FROM {luopin_picture_content}';
	$limit = 20;
	$header = array (
			array (
				'data' => t('Name'),
				'field' => 'name',
			      ),
			array (
				'data' => t('Location'),
				'field' => 'location',
			      ),
			array (
				'data' => t('Description'),
				'field' => 'description',
			      ),
			array (
				'data' => t('Upload Time'),
				'field' => 'time',
				'sort' => 'desc',
			      ),
		       );
	$tablesort = tablesort_sql($header);
	$result = pager_query($sql . $tablesort, $limit);
	$rows = array();
	while ($picture = db_fetch_object($result)) {
		$rows[] = array($picture->name, $picture->location, $picture->description, $picture->time);
	}
	if (!$rows) {
		$rows[] = array(array('data' => t('The list is empty.'), 'colspan' => 3));
	}
	$output .= theme('table', $header, $rows, array('id' => 'luopin_picture-file-listing'));
	//$output .= theme('pager', NULL, $limit, 0);
	return $output;
}

function luopin_picture_match_path($path, $patterns)
{
	static $regexps;

	if (!isset ($regexps[$patterns])) {
		$regexps[$patterns]= '/^('.preg_replace(array (
						'/(\r\n?|\n)/',
						'/\\\\\*/'
						), array (
							'|',
							'.*'
							), preg_quote($patterns, '/')).')$/';
	}
	$result= preg_match($regexps[$patterns], $path) == 1;
	return $result;
}

