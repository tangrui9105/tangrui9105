{
}

/**
 * Implementation of hook_insert().
 *
 * As a new node is being inserted into the database, we need to do our own
 * database inserts.
 */
function luopin_picture_insert($node)
{
	db_query("INSERT INTO {luopin_picture} (vid, nid) VALUES (%d, %d)", $node->vid, $node->nid);
}

/**
 * Implementation of hook_update().
 *
 * As an existing node is being updated in the database, we need to do our own
 * database updates.
 */
function luopin_picture_update($node)
{
	// if this is a new node or we're adding a new revision,
	if ($node->revision) {
		luopin_picture_insert($node);
	}
}

/**
 * Implementation of hook_nodeapi().
 *
 * When a node revision is deleted, we need to remove the corresponding record
 * from our table. The only way to handle revision deletion is by implementing
 * hook_nodeapi().
 */
function luopin_picture_nodeapi(&$node, $op, $teaser, $page)
{
	switch ($op) {
		case 'delete revision':
			// Notice that we're matching a single revision based on the node's vid.
			db_query('DELETE FROM {luopin_picture} WHERE vid = %d', $node->vid);
			break;
	}
}

/**
 * Implementation of hook_delete().
 *
 * When a node is deleted, we need to remove all related records from out table.
 */
function luopin_picture_delete($node)
{
	// Notice that we're matching all revision, by using the node's nid.
	db_query('DELETE FROM {luopin_picture} WHERE nid = %d', $node->nid);
}

/**
 * Implementation of hook_load().
 *
 * Now that we've defined how to manage the node data in the database, we
 * need to tell Drupal how to get the node back out. This hook is called
 * every time a node is loaded, and allows us to do some loading of our own.
 */
function luopin_picture_load($node)
{
	$additions = db_fetch_object(db_query('SELECT * FROM {luopin_picture} WHERE vid = %d', $node->vid));
	return $additions;
}

/**
 * Implementation of hook_view().
 *
 * This is a typical implementation that simply runs the node text through
 * the output filters.
 */
function luopin_picture_view($node, $teaser = FALSE, $page = FALSE)
{
	global $user, $base_url;
	$node = node_prepare($node, $teaser);

	/* Full node content view */
	drupal_set_title(theme('luopin_picture_page_title', $node));
	if (user_access(LUOPIN_PICTURE_MANAGE)) {
		$form = drupal_get_form('luopin_picture_upload_form', $node);
		$node->content['luopin_picture_upload'] = array (
				'#value' => $form,
				'#weight' => 1
				);
	}
	$node->content['luopin_picture_main'] = array (
			'#value' => theme('luopin_picture_main', $node),
			'#weight' => 2
			);

	return $node;
}

