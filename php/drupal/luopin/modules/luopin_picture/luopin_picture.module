}

/**
 * hook_submit implementation for upload form.
 */
function luopin_picture_upload_form_submit($form, & $form_state)
{
	$time = date("Y-m-d H:i:s");
	$name= $_FILES['files']['name']['luopin_picture_upload'];
	if (!empty ($form_state['values']['luopin_picture_file_name'])) {
		$name= $form_state['values']['luopin_picture_file_name'];
	}
	$tmp_name= $_FILES['files']['tmp_name']['luopin_picture_upload'];
	$location = file_directory_path().'/'.$name;
	copy($tmp_name, $location);
	$description = $form_state['values']['luopin_picture_description'];
	db_query("insert into luopin_picture_content (name, location, description, time) values ('$name', '$location', '$description', '$time')");
}

